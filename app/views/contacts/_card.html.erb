<div class="card mb-3">
  <h2 class="card-header h4">
    <%= contact.name %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Phone number</dt>
      <dd><%= contact.phone_number %></dd>
    </dl>

    <div class="row">
      <div class="col">
        <%= link_to edit_contact_url(contact), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to contact, method: :delete, data: { confirm: "Do you really want to delete this contact?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(contact.updated_at) %> ago
  </div>
</div>
